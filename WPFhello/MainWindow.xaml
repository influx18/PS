<Window x:Class="WPFhello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFhello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Label1" Content="Hello, WPF!" HorizontalAlignment="Left" Margin="44,28,0,0" VerticalAlignment="Top" FontSize="36"/>
        <ListBox x:Name="peopleListBox" HorizontalAlignment="Left" Height="100" Margin="597,120,0,0" VerticalAlignment="Top" Width="158" SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem Content="Mike"/>
            <ListBoxItem Content="Lisa"/>
            <ListBoxItem Content="John"/>
            <ListBoxItem Content="Mary"/>
        </ListBox>
        <Button Content="Greeting" HorizontalAlignment="Left" Margin="636,225,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
